{
  "name": "sugarss",
  "version": "0.2.0",
  "description": "Indent-based CSS syntax for PostCSS",
  "keywords": [
    "css",
    "postcss",
    "postcss-syntax",
    "syntax",
    "indent",
    "parser"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/sugarss",
  "dependencies": {
    "postcss": "^5.2.4"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-precompile-charcodes": "^1.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^3.8.1",
    "eslint-config-postcss": "^2.0.2",
    "lint-staged": "^3.2.0",
    "postcss-parser-tests": "^5.0.10",
    "pre-commit": "^1.1.3"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "prepublish": "npm run build",
    "clean": "rm *.js || echo 'Already cleaned'",
    "build": "npm run clean && babel -s inline -d ./ *.es6",
    "lint": "eslint *.es6 test/*.js",
    "test": "npm run build && ava && npm run lint"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "loose": true
        }
      ],
      "stage-0"
    ],
    "plugins": [
      "add-module-exports",
      "precompile-charcodes"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint-config-postcss",
    "rules": {
      "key-spacing": [
        2,
        {
          "align": "value"
        }
      ],
      "complexity": [
        0
      ]
    }
  },
  "lint-staged": {
    "test/*.js": "eslint",
    "*.es6": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
